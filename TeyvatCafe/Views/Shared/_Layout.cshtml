@inject IConfiguration Configuration
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css">


</head>
<body>
    <div class="container-fluid">
        <header class="bg-dark">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-2">
                        <a href="/">
                            <img src="~/img/icon/@Configuration["ImageUrlLogo"]" style="height: 200px" alt="Logo" />
                            
                        </a>
                    </div>
                    <div class="col-10">
                        <img src="~/img/icon/@Configuration["ImageUrlBanner"]" style="max-height:200px;min-width:1500px" alt="Banner" />


                    </div>

                </div>

            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color:gainsboro !important;">
            <a class="navbar-brand" href="/"><i class="fas fa-home"></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>



            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/index">Thông tin tài khoản<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/cart"> Giỏ hàng <i class="fas fa-shopping-cart"></i><span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/home/aboutus">
                                Về Chúng Tôi
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/auth/login">Đăng nhập <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/auth/register">Đăng kí <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/home/aboutus">
                                Về Chúng Tôi
                            </a>
                        </li>
                    </ul>
                }


                <form class="form-inline my-2 my-lg-0" action="/home/search" method="post">
                    <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search" minlength="2" maxlength="10" required>
                    <button class="btn btn-outline-success my-2 my-sm-0">Search</button>
                </form>

            </div>
            @if (User.Identity.IsAuthenticated)

            {
                <ul class="navbar-nav ml-auto ml-md-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="/account/index">Tài khoản của tôi</a>
                            <a class="dropdown-item" href="/account/address">Quản lí địa chỉ</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/auth/logout">Đăng xuất</a>
                        </div>
                    </li>
                </ul>
            }

        </nav>


        <div>
            @RenderBody()
        </div>
        <footer class="bg-dark text-light text-center" style="margin-top:10px;">
            <div class="row">

                <div class="col-4">
                    <h1>Website kinh doanh cafe Teyvat</h1>
                </div>
                <div class="col-4">
                    <h3>Các thành viên của nhóm</h3>
                    <ul class="Member-name" style="list-style-type:none">
                        <li>Phùng Ngọc Thành</li>
                        <li>Lê Phạm Quốc Thái</li>
                        <li>Trương Thiên Bảo</li>
                        <li>Nguyễn Mạnh Cường</li>
                    </ul>
                </div>
                <div class="col-4">
                    <h1>Đồ án môn <br />Công nghệ phần mềm</h1>

                </div>
            </div>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
